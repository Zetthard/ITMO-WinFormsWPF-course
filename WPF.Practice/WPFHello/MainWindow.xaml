<Window x:Class="WPFHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500" MinHeight="350" MinWidth="500" Closing="Window_Closing">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="mainlabel" HorizontalAlignment="Center" VerticalAlignment="Top">Первое приложение WPF</Label>
        <Button x:Name="SetButton" Content="Set Name" HorizontalAlignment="Left" Margin="72,80,0,0" VerticalAlignment="Top" Width="75" Click="SetButton_Click"/>
        <Button x:Name="RetButton" Content="Ret Name" HorizontalAlignment="Left" Margin="72,148,0,0" VerticalAlignment="Top" Width="75" Click="RetButton_Click"/>
        <Label x:Name="RetLabel" Content="" HorizontalAlignment="Left" Margin="225,124,0,0" VerticalAlignment="Top" Width="239" Background="#FFE9FDF2" Height="72"/>
        <TextBox x:Name="SetText" HorizontalAlignment="Left" Height="23" Margin="225,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="SetText_TextChanged"/>
        <Button x:Name="SecWinButton" Content="New window" HorizontalAlignment="Left" Margin="72,248,0,0" VerticalAlignment="Top" Width="75" Click="SecWinButton_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="226,233,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="50" Width="75"/>
    </Grid>
</Window>
