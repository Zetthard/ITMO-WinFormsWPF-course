<Window x:Class="UserForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:my="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
        xmlns:local="clr-namespace:UserForms"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <WindowsFormsHost x:Name="WinFormsHost1" HorizontalAlignment="Left" Height="155" Margin="275,25,0,0" VerticalAlignment="Top" Width="290">
            <wf:MaskedTextBox x:Name="MaskedTextBox1" Mask="(000)-000-0000"/>
        </WindowsFormsHost>
        <Button x:Name="Botton1" Content="Add to collection" HorizontalAlignment="Left" Height="41" Margin="91,40,0,0" VerticalAlignment="Top" Width="113" Click="Botton1_Click"/>
        <Button x:Name="Button2" Content="Save to file" HorizontalAlignment="Left" Height="41" Margin="91,121,0,0" VerticalAlignment="Top" Width="113" Click="Button2_Click"/>

    </Grid>
</Window>
