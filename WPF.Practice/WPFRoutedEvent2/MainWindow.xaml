<Window x:Class="WPFRoutedEvent2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFRoutedEvent2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Textbox1" HorizontalAlignment="Left" Height="402" Margin="415,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="370"/>
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Height="390" Margin="22,22,0,0" VerticalAlignment="Top" Width="356">
            <Button x:Name="ButtonAdd" Content="Add" Width ="120" Height ="100" HorizontalAlignment="Left" Margin="5,5,5,5"/>
            <Button x:Name="ButtonSqrt" Content="Sqrt" Width ="120" Height="100" HorizontalAlignment="Left" Margin="5,5,5,5"/>
            <Button x:Name="ButtonMult" Content="Multiply" Width="120" Height="100" HorizontalAlignment="Left" Margin="5,5,5,5"/>
        </StackPanel>

    </Grid>
</Window>
